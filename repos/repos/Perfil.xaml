<UserControl x:Class="FinalLab.Perfil"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FinalLab"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="800"
             Background="White">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" MaxWidth="400">

            <!-- Foto de Perfil -->
            <Border Width="180" Height="180" CornerRadius="90"
                    BorderBrush="#B0B0B0" BorderThickness="2" Background="#F0F0F0"
                    Margin="0,0,0,25">
                <Ellipse Width="176" Height="176">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="ProfileImageBrush" Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Border>

            <!-- Linha Separadora Superior -->
            <Border Height="1" Background="#D0D0D0" Margin="0,0,0,10" Width="350"/>

            <!-- Nome do Utilizador -->
            <TextBlock Text="Nome:" FontSize="14" FontWeight="SemiBold" Foreground="#555555" Margin="0,0,0,3"/>
            <TextBlock x:Name="UserNameTextBlock" Text="A carregar nome..."
                       FontSize="24" FontWeight="Bold" HorizontalAlignment="Left"
                       Foreground="#222222" Margin="0,0,0,15" TextWrapping="Wrap"/>

            <!-- Email do Utilizador -->
            <TextBlock Text="Email:" FontSize="14" FontWeight="SemiBold" Foreground="#555555" Margin="0,0,0,3"/>
            <TextBlock x:Name="UserEmailTextBlock" Text="A carregar email..."
                       FontSize="16" HorizontalAlignment="Left"
                       Foreground="#444444" Margin="0,0,0,20" TextWrapping="Wrap"/>

            <!-- Linha Separadora Inferior -->
            <Border Height="1" Background="#D0D0D0" Margin="0,0,0,25" Width="350"/>

            <!-- Botão Editar Perfil -->
            <Button x:Name="EditProfileButton" Content="Editar Perfil"
                    Width="180" Padding="12,8" HorizontalAlignment="Center"
                    Click="EditProfileButton_Click"
                    Background="#0078D4" Foreground="White" BorderThickness="0"
                    FontWeight="SemiBold" FontSize="14">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </Button.Resources>
            </Button>

        </StackPanel>
    </Grid>
</UserControl>
