<Window x:Class="FinalLab.Criartarefa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalLab"
        mc:Ignorable="d"
        Title="Criar Nova Tarefa" Height="450" Width="350"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Nome Label -->
            <RowDefinition Height="Auto"/>
            <!-- Nome TextBox -->
            <RowDefinition Height="Auto"/>
            <!-- Descrição Label (NOVO) -->
            <RowDefinition Height="Auto"/>
            <!-- Descrição TextBox (NOVO) -->
            <RowDefinition Height="Auto"/>
            <!-- Prazo Label -->
            <RowDefinition Height="Auto"/>
            <!-- Prazo DatePicker -->
            <RowDefinition Height="Auto"/>
            <!-- Peso Label -->
            <RowDefinition Height="Auto"/>
            <!-- Peso TextBox -->
            <RowDefinition Height="Auto"/>
            <!-- Notificar CheckBox -->
            <RowDefinition Height="*"/>
            <!-- Espaço -->
            <RowDefinition Height="Auto"/>
            <!-- Botões -->
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Nome da Tarefa:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" x:Name="NomeTarefaTextBox" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="2" Text="Descrição:" Margin="0,0,0,5"/>
        <!-- NOVO -->
        <TextBox Grid.Row="3" x:Name="DescricaoTarefaTextBox" Margin="0,0,0,10" AcceptsReturn="True" TextWrapping="Wrap" Height="60" VerticalScrollBarVisibility="Auto"/>
        <!-- NOVO -->

        <TextBlock Grid.Row="4" Text="Prazo:" Margin="0,0,0,5"/>
        <DatePicker Grid.Row="5" x:Name="PrazoDatePicker" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="6" Text="Peso (%):" Margin="0,0,0,5"/>
        <TextBox Grid.Row="7" x:Name="PesoTextBox" Margin="0,0,0,10"/>

        <CheckBox Grid.Row="8" x:Name="NotificarCheckBox" Content="Notificar quando o prazo estiver próximo" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Guardar" Width="100" Margin="0,0,10,0" Click="GuardarButton_Click"/>
            <Button Content="Cancelar" Width="100" Click="CancelarButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
